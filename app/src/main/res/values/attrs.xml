    <attr name="vaParaTabla" format="string" />      <!-- Tabla en la cual se hara el INSERT  -->

    <attr name="myInputType" format="enum">
        <enum name="lista" value="1"/>
        <enum name="editTextDialog" value="2"/>
        <enum name="datePicker" value="3"/>

   </attr>

    <attr name="secondaryInputType" format="enum">
        <enum name="lista" value="1"/>
