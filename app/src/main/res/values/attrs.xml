        <!--
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>

        </attr>  -->
    </declare-styleable>


    <declare-styleable name="MyCheckBox">
        <attr name="vieneDeTabla"/>
        <attr name="nombreCampo" />  <!-- NombreDelCampoEnLaBaseDeDatos -->
        <attr name="llaveEn" />      <!-- Tablas en las cuales se necesita para busqueda WHERE  -->
        <attr name="vaParaTabla" />      <!-- Tabla en la cual se hara el INSERT  -->
        <attr name="nombreCampo.Destino"/>
        <attr name="myInputType"/>
        <attr name="secondaryInputType"/>
        <!--
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>

        </attr>  -->
