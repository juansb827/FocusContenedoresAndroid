<?xml version="1.0" encoding="utf-8"?>


<resources>
    <attr name="vieneDeTabla" format="string" /> <!--tabla de la cual se saco el dato con un SELECT  -->
    <attr name="nombreCampo" format="string"/>  <!-- NombreDelCampoEnLaBaseDeDatos -->
    <attr name="nombreCampo.Destino" format="string"/>  <!-- NombreDelCampoEnLaBaseDeDatos (
            Si se llama diferente de la tabla de origna y en donde se va a insertar) -->
