<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.juans.inspeccion.Interfaz.ImpresoraActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Configuracion Impresora"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre impresora"
        android:id="@+id/lblNombreImpresora"
        android:textSize="25dp"

        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/txtNombreImpresora"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        android:textSize="25sp"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Direccion dispositivo"
        android:id="@+id/lblMacAdress"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/txtDireccionImpresora"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        android:textSize="25sp"
                          />
    <Button
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:text="Lista de dispositivos"
    android:id="@+id/btnListarDispositivos"
        android:layout_gravity="center_horizontal"
    />
    <Button
        android:id="@+id/btnProbarImpresora"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Probar Impresora"

        android:layout_gravity="center_horizontal"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/hue"
        android:textSize="25dp"
        android:layout_weight="70"
        android:textStyle="bold" />




</LinearLayout>
